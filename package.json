{
  "name": "template-storybook-vue",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@epreston/eslint-config",
      "plugin:vue/vue3-essential",
      "plugin:storybook/recommended"
    ],
    "ignorePatterns": [
      "storybook-static"
    ],
    "rules": {
      "prettier/prettier": "off"
    }
  },
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "lint": "eslint --fix --ext .js,.vue .",
    "format": "prettier --write \"**/*.{js,vue}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@epreston/eslint-config": "^1.1.1",
    "@epreston/prettier-config": "^2.0.0",
    "@epreston/tsconfig": "^1.1.1",
    "@storybook/addon-essentials": "^8.1.1",
    "@storybook/vue3": "^8.1.4",
    "@storybook/vue3-vite": "^8.0.10",
    "@vitejs/plugin-vue": "^5.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-vue": "^9.26.0",
    "prettier": "^3.2.5",
    "storybook": "^8.0.10",
    "vite": "^5.2.11"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.27"
  },
  "engines": {
    "node": "^18.19.0 || >=20.11.0"
  }
}
