{
  "private": true,
  "type": "module",
  "name": "template-storybook-vue",
  "version": "0.4.0",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@epreston/eslint-config",
      "plugin:vue/vue3-essential",
      "plugin:storybook/recommended"
    ],
    "ignorePatterns": [
      "storybook-static"
    ]
  },
  "prettier": "@epreston/prettier-config",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "lint": "eslint --fix --ext .js,.vue .",
    "format": "prettier --write \"**/*.{js,vue}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@epreston/eslint-config": "^1.1.2",
    "@epreston/prettier-config": "^2.1.0",
    "@epreston/tsconfig": "^1.2.1",
    "@storybook/addon-essentials": "^8.2.4",
    "@storybook/vue3": "^8.2.4",
    "@storybook/vue3-vite": "^8.2.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-vue": "^9.27.0",
    "prettier": "^3.3.3",
    "storybook": "^8.2.4",
    "vite": "^5.3.4"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.32"
  },
  "engines": {
    "node": "^18.20.4 || ^20.15.1 || >=22.5.0"
  }
}
